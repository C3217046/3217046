    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>三次方程式の解を求める</title>
</head>
<body>
    <h1>三次方程式の解を求める</h1>
    <p>三次方程式 \( ax^3 + bx^2 + cx + d = 0 \) の解を以下に示します。</p>
    <button onclick="show()">解を表示</button>
    <p id="output"></p>

    <script>
        function show() {
            // 定数の設定 (a, b, c, d の値を設定)
            const a = 1;  // 係数 a
            const b = -6; // 係数 b
            const c = 11; // 係数 c
            const d = -6; // 定数項 d

            // 解を保存する配列とカウント変数
            let anser = [];
            let count = 0;

            // 初期値
            let x = 1;

            // while文で解を探索
            while (true) {
                // 三次方程式の計算
                let result = a * Math.pow(x, 3) + b * Math.pow(x, 2) + c * x + d;

 // 解が見つかった場合
 if (result === 0) {
 anser.push(x); // 解を配列に保存
 count++;       // 解の数をカウント

 // 3つの解が見つかったらループを終了
if (count === 3) {
  break;   }}
 // 次の値へ
  x++;

// 無限ループ回避のための条件 (探索範囲を制限)
 if (x > 1000) { 
  break;} }
 // 結果を表示
 const output = document.getElementById("output");
if (anser.length > 0) {
output.textContent = `見つかった解: ${anser.join(", ")}`;
 } else {
  output.textContent = "解が見つかりませんでした。";     }
}
    </script>
</body>
</html>