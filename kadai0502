<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>配列の掛け算</title>
    <style>
        /* 表のスタイル */
        table {
            width: 50%;
            border-collapse: collapse;
        }
        th, td {
            padding: 10px;
            border: 1px solid black;
            text-align: center;
        }
        button {
            padding: 5px 10px;
            margin: 10px;
        }
    </style>
    <script>
        // 配列aとbを定義
        let a = [500, 980, 1200];
        let b = [10, 16, 8];

        // 0番目の要素の掛け算
        function multiply_0() {
            let answer = a[0] * b[0];
            alert("a[0] × b[0] の結果: " + answer);
        }

        // 1番目の要素の掛け算
        function multiply_1() {
            let answer = a[1] * b[1];
            alert("a[1] × b[1] の結果: " + answer);
        }

        // 2番目の要素の掛け算
        function multiply_2() {
            let answer = a[2] * b[2];
            alert("a[2] × b[2] の結果: " + answer);
        }
    </script>
</head>
<body>
    <h1>配列の掛け算</h1>
    <table>
        <tr>
            <th>配列 a</th>
            <th>配列 b</th>
        </tr>
        <tr>
            <td>500</td>
            <td>10</td>
        </tr>
        <tr>
            <td>980</td>
            <td>16</td>
        </tr>
        <tr>
            <td>1200</td>
            <td>8</td>
        </tr>
    </table>
    
    <button onclick="multiply_0()">a[0] × b[0]</button>
    <button onclick="multiply_1()">a[1] × b[1]</button>
    <button onclick="multiply_2()">a[2] × b[2]</button>
</body>
</html>